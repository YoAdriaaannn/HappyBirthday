<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adrianraff.happybirthday.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/happy_birthday" />

    <ImageButton
        android:id="@+id/qr_image"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_above="@+id/from_text"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bdaycode"
        android:tag="http://site_2.com"
        />

    <TextView
        android:id="@+id/happy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Birthday!!!"
        android:textSize="36sp"
        android:fontFamily="@android:sans-serrif-light"
        android:textColor="@android:color/white"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/scan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click or scan QR Code"
        android:textSize="12sp"
        android:fontFamily="@android:sans-serrif-light"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:layout_above="@id/from_text"
        android:layout_alignParentEnd="true"
        />



    <TextView
        android:id="@+id/from_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="From Adrian Raff"
        android:fontFamily="@android:sans-serrif-light"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:padding="20dp"
        />


</RelativeLayout>
